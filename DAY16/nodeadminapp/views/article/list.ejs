        <!--우측 상단 헤더 영역 -->
        <div class="row wrapper border-bottom white-bg page-heading">
          <div class="col-lg-10">
            <h2>게시글 정보 관리</h2>
            <ol class="breadcrumb">
              <li>
                <a href="/">Home > </a>
              </li>
              <li>
                <a>게시글 정보 관리 > </a>
              </li>
              <li class="active">
                <strong>조회</strong>
              </li>
            </ol>
          </div>
          <div class="col-lg-2"></div>
        </div>

        <!--우측 콘텐츠 영역 -->
        <div class="wrapper wrapper-content">
          <form action="/article/list" method="post" id="searchForm">
            <div class="ibox-content m-b-sm border-bottom">
              <div class="row">
                <div class="col-sm-4">
                  <div class="form-group">
                    <label class="control-label" for="OrderNo">게시판</label>
                    <select name="boardTypeCode" id="boardTypeCode" class="form-control">
                      <option value="0" <%= searchOption.boardTypeCode === '0' ? 'selected' : '' %>>전체</option>
                      <option value="1" <%= searchOption.boardTypeCode === '1' ? 'selected' : '' %>>공지게시판</option>
                      <option value="2" <%= searchOption.boardTypeCode === '2' ? 'selected' : '' %>>기술블로깅</option>
                    </select>
                  </div>
                </div>
                <div class="col-sm-4">
                  <div class="form-group">
                    <label class="control-label" for="OrderName">제목</label>
                    <input type="text" name="title" class="form-control" value="<%=searchOption.title%>" />
                  </div>
                </div>
                <div class="col-sm-4">
                  <div class="form-group">
                    <label class="control-label" for="MobileNo">게시여부</label>
                    <select name="isDisplayCode" class="form-control">
                      <option value="9" <%= searchOption.isDisplayCode === '9' ? 'selected' : '' %>>전체</option>
                      <option value="1"<%= searchOption.isDisplayCode === '1' ? 'selected' : '' %>>게시함</option>
                      <option value="0"<%= searchOption.isDisplayCode === '0' ? 'selected' : '' %>>게시안함</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="text-center">
                <input type="submit" class="btn btn-primary" value="조회" />
                <a href="/article/create" class="btn btn-info">신규</a>
              </div>
            </div>
          </form>
          <!-- 게시글 조회결과 목록 표시영역 -->
          <div class="row">
            <div class="col-lg-12">
              <div class="ibox float-e-margins">
                <div class="ibox-content">
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th width="5%">순번</th>
                          <th width="10%">게시판구분</th>
                          <th width="45%">제목</th>
                          <th width="5%">조회수</th>
                          <th width="5%">IP주소</th>
                          <th width="10%">게시상태</th>
                          <th width="10%">등록일자</th>
                        </tr>
                      </thead>
                      <tbody class="hoverTblBody">
                        <% articles.forEach(article => { %>
                          <tr>
                            <td><%=article.article_id%></td>
                            <td><%=article.board_type_code == 1 ? '공지게시판' : '기술블로깅'%></td>
                            <td><a href="/article/modify/<%=article.article_id%>"><%=article.title%></a></td>
                            <td><%=article.view_count%></td>
                            <td><%=article.ip_address%></td>
                            <td><%=article.is_display_code == 1 ? '게시함' : '게시안함'%></td>
                            <td><%=article.reg_date%></td>
                          </tr>
                          <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
